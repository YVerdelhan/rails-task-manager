<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <ul class="list-group">
  <% if task.completed %>
    <li class="list-group-item"><input type="checkbox" disabled="disabled" checked><%=link_to "#{task.title}", task_path(task) %><%= link_to "Delete",
            delete_task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <% else %>
    <li class="list-group-item"><input disabled="disabled"  type="checkbox"><%= link_to "#{task.title}", task_path(task) %><%= link_to "Delete",
            delete_task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  </ul>
  <% end %>
<% end %>

<%= link_to "Create a new task", new_task_path %>
